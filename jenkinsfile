pipeline {
  agent any
  stages {
    stage('markdown') {
      steps {
        echo 'markdown..'
        sh 'mdl README.md'
      }
    }
    stage('shellcheck') {
      steps {
        echo 'shellcheck..'
      }
    }
    stage('groovy') {
      steps {
        echo 'groovy..'
        sh 'npm-groovy-lint **/*.groovy'
      }
    }
    stage('json') {
      steps {
        echo 'json..'
      }
    }
  }
}
