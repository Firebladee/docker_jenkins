pipeline {
  agent any
  stages {
    stage('markdown') {
      checkout([
        $class: 'Gitscm',
        branches: [[name: 'ref/heads/master']],
        doGenerateSubmoduleConfigurations: false,
        externsions: [[$class: 'RelativeTargetDirectory', relativeTargetDir: 'markdown']],
        submoduleCfg: [],
        userRemoteConfigs: [[url: 'https://github.com/markdownlint/markdownlint.git']]
      ])
      steps {
        echo 'markdown..'
      }
    }
    stage('shellcheck') {
      steps {
        echo 'shellcheck..'
      }
    }
    stage('groovy') {
      steps {
        echo 'groovy..'
      }
    }
    stage('json') {
      steps {
        echo 'json..'
      }
    }
  }
}
