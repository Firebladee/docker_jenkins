pipeline {
  agent any
  stages {
    stage('markdown') {
      steps {
        echo 'markdown..'
        sh 'mdl README.md'
      }
    }
    stage('shellcheck') {
      steps {
        echo 'shellcheck..'
        sh 'find . -type f -exec sh -c "head -n 1 {} | egrep -a '/bin/bash|/bin/sh'" \; -print -exec shellcheck {} \;
      }
    }
    stage('groovy') {
      steps {
        echo 'groovy..'
      }
    }
    stage('json') {
      steps {
        echo 'json..'
      }
    }
  }
}
